<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ),user_path(current_user.id)%>
  <div class="card__body">
    <%= link_to prototype.title,  prototype_path(prototype.id), class: :card__title, method: :get%>

    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "#{prototype.user.name}", root_path, class: :card__user %>
  </div>
  <%= image_tag prototype.image, class: 'prototype-image' if prototype.image.attached? %>
</div>